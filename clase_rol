public class rol{

    //Colocamos los atributos

    int idRol;
    String nombreRol;
    String permisos; 

    public rol (int idRol, String nombreRol, String permisos){
        this.idRol=idRol;
        this.nombreRol=nombreRol;
        this.permisos=permisos;
    }

    //Aplicamos getter y setter

    public int getidRol(){return idRol; }
    public void setidRol(int idRol) { this.idRol = idRol; }

    public int getnombreRol(){return nombreRol; }
    public void setnombreRol(int nombreRol) { this.nombreRol = nombreRol; }

    public int getpermisos(){return permisos; }
    public void setpermisos(int permisos) { this.permisos = permisos; }

    //Imprimimos la informaci√≥n

    public void datos_rol (){
        System.out.println("El id de su rol es: " + idRol);
        System.out.println("El nombre de su rol es: " + nombreRol);
        System.out.println("El permiso de su rol es: " + permisos);
    }
}
